<% include partials/header.ejs %>
<body>
<div class="container">
    <% if (message) { %>
        <p class="text-center text-danger"><%= message %></p>
    <% } %>

    <% if (person) { %>
        <form class="add-person-form" action="" method="post" enctype="application/x-www-form-urlencoded">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="first-name">First Name</label>
                    <input type="text" class="form-control" name="first_name" id="first-name" value="<%= person.fname %>" required>
                </div>
                <div class="form-group col-md-4">
                    <label for="last-name">Last Name</label>
                    <input type="text" class="form-control" name="last_name" id="last-name" value="<%= person.lname %>" required>
                </div>
                <div class="form-group col-md-4">
                    <label for="address">Address</label>
                    <input type="text" class="form-control" name="address" id="address" value="<%= person.address %>" required ">
                </div>
                <div class="form-group col-md-4">
                    <label for="email">Email</label>
                    <input type="text" class="form-control" name="email" id="email" value="<%= person.email %>" required ">
                </div>
                <div class="form-group col-md-4">
                    <label for="contact">Contact</label>
                    <input type="text" class="form-control" name="contact" id="contact" value="<%= person.contact %>" required ">
                </div>
            </div>            
            <button type="submit" class="btn btn-success float-right">Update Person</button>
        </form>
    <% } else { %>
        <p class="text-center">Person Not Found.</p>
    <% } %>
</div>
</div>
</body>
</html>