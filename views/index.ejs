<% include partials/header.ejs %>
<body>
   <div class="container">
      <div class="row">
      	<% if (person.length > 0) {%>
        <div class="col-md-12">
        	<h4>Bootstrap Snipp for Datatable</h4>
        	<a href="/add" target="_blank" rel="noopener" class="btn btn-sm btn-success">Add Person</a>
			<div class="table-responsive">
				<table id="mytable" class="table table-bordred table-striped">
					<thead>
						<th>ID</th>
						<th>First Name</th>
						<th>Last Name</th>
						<th>Address</th>
						<th>Email</th>
						<th>Contact</th>
						<th>Edit</th>
						<th>Delete</th>
					</thead>
					<tbody>
                  		<% person.forEach((persons, index) => { %>
                    	<tr>
	                    	<td><%= persons.id %></td>
	                    	<td><%= persons.fname %></td>
	                    	<td><%= persons.lname %></td>
	                    	<td><%= persons.address %></td>
	                    	<td><%= persons.email %></td>
	                    	<td><%= persons.contact %></td>                    	
	                    	<td>
	                    		<a href="/edit/<%= persons.id %>" target="_blank" rel="noopener" class="btn btn-sm btn-success">Edit</a>
	                    	</td>
	                    	<td>
	                    		<a href="/delete/<%= persons.id %>" class="btn btn-sm btn-danger">Delete</a>
	                    	</td>
                    	</tr>
                    	<% }) %>                  
					</tbody>
				</table>
            </div>
        </div>
        <% } else { %>
            <p class="text-center">No person found.</p>
        <% } %>
      </div>
   </div>   
   <!-- Core -->
   <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
   <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>

</html>